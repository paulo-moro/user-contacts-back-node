{
    "openapi":"3.0.0",
    "info":{
        "title":"Api de usuários e cadastro",
        "description": "Nesta api é possível o usuário cadastrar um usuário e criar contatos para este usuário.",
        "contact":{
            "email": "paulo.morolol@gmail.com"
        },
        "version":"1.0.0"
    },
    "server":[{
        "url":"http://localhost:8080/"
    }],
    "paths":{
        "/users":{
            "get":{
                "summary":"Perfil do usuário",
                "description": "Essa rota é responsavel pela recuperação dos dados do usuário",
                "tags":["user"],
                "security":[{"bearerAuth":[]}],
                "responses":{
                    "404":{
                        "description":"User not Found",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/Error"
                                }
                            }
                        }    
                    },
                    "401":{
                        "description":"Unauthorized",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/Error"
                                }
                            }
                        }    
                    },
                    "200":{
                        "description":"Ok",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/CreatedUser"
                                }
                            }
                        }
                    }
                }
            },
            "post":{
                "summary":"Cadastro de usuário",
                "description": "Essa rota será responsável por criar um novo usuário",
                "tags":["user"],
                "requestBody":{
                    "content":{
                        "application/json":{
                            "schema":{
                               "$ref":"#/components/schemas/CreatedUser"
                            },
                            "examples":{
                                "user":{
                                    "value":{
                                        "name":"Juvia",
                                        "email":"juvia@gato.com",
                                        "phone":"41977777777",
                                        "password":"saches@123"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "412":{
                        "description":"User need a name, email, telefone and password",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/Error"
                                }
                            }
                        }                      
                    },
                    "400":{
                        "description":"User with this email already exist",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/Error"
                                }
                            }
                        }
                    },
                    "201":{
                        "description":"Created",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/CreatedUser"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/login":{
            "post":{
                "summary":"Login de um usuário",
                "description": "Essa rota será responsável por realizar o login de usuário e retornar o token de autenticação",
                "tags":["user"],
                "requestBody":{
                    "content":{
                        "application/json":{
                            "schema":{
                               "$ref":"#/components/schemas/UserLogin"
                            },
                            "examples":{
                                "user":{
                                    "value":{
                                        "email":"juvia@gato.com",
                                        "password":"saches@123"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "400":{
                        "description":"Wrong email/password",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/Error"
                                }
                            }
                        }    
                    },
                    "200":{
                        "description":"Ok",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/Token"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/users/{userId}":{
            
            "patch":{
                "summary":"Atualização de usuário",
                "description": "Essa rota é responsavel pela atualização parcial dos dados do usuário",
                "tags":["user"],
                "security":[{"bearerAuth":[]}],
                "parameters":[
                    {
                        "name":"userId",
                        "in":"path",
                        "description":"Essa rota é responsavel pela atualização dos dados do usuário, o usuário logado somente tem acesso ao seu perfil, a não ser admin, que tem acesso a todos os perfis.",
                        "required":true
                    }
                ],
                "requestBody":{
                    "content":{
                        "application/json":{
                            "schema":{
                               "$ref":"#/components/schemas/CreatedUser"
                            },
                            "examples":{
                                "user":{
                                    "value":{
                                        "name":"Juvia Patch"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "404":{
                        "description":"User not Found",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/Error"
                                }
                            }
                        }    
                    },
                    "401":{
                        "description":"Unauthorized",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/Error"
                                }
                            }
                        }    
                    },
                    "200":{
                        "description":"Ok",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/CreatedUser"
                                }
                            }
                        }
                    }
                }
            },
            "delete":{
                "summary":"Deleção de usuário",
                "description": "Essa rota é responsavel pela deleção do perfil do usuário",
                "tags":["user"],
                "security":[{"bearerAuth":[]}],
                "parameters":[
                    {
                        "name":"userId",
                        "in":"path",
                        "description":"Essa rota é responsável por deletar os dados do perfil do usuário, o usuário logado somente tem acesso ao seu perfil, a não ser admin, que tem acesso a todos os perfis.",
                        "required":true
                    }
                ],
                "responses":{
                    "404":{
                        "description":"User not Found",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/Error"
                                }
                            }
                        }    
                    },
                    "401":{
                        "description":"Unauthorized",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/Error"
                                }
                            }
                        }    
                    },
                    "204":{
                        "description":"No content"
                        }
                    
                }
            }
        },
        "/contact":{
            "post":{
                "summary":"Cadastro de contato",
                "description": "Essa rota será responsável por criar um novo contato para um usuário logado",
                "tags":["contact"],
                "security":[{"bearerAuth":[]}],
                "requestBody":{
                    "content":{
                        "application/json":{
                            "schema":{
                               "$ref":"#/components/schemas/CreatedContact"
                            },
                            "examples":{
                                "user":{
                                    "value":{
                                        "name":"Pandora",
                                        "email":"pandora@gato.com",
                                        "phone":"41977777778"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "412":{
                        "description":"Contact need a name, email and telefone",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/Error"
                                }
                            }
                        }                      
                    },
                    "400":{
                        "description":"Contact with this email already exist",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/Error"
                                }
                            }
                        }
                    },
                    "201":{
                        "description":"Created",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/CreatedContact"
                                }
                            }
                        }
                    }
                }
            },
            "get":{
                "summary":"Contatos do usuário",
                "description": "Essa rota é responsavel pela listagem de contatos do usuário logado",
                "tags":["contact"],
                "security":[{"bearerAuth":[]}],
                "parameters":[
                    {
                        "name":"contactId",
                        "in":"path",
                        "description":"Essa rota recupera os contatos do usuário",
                        "required":true
                    }
                ],
                "responses":{
                    "404":{
                        "description":"User or Contact not Found",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/Error"
                                }
                            }
                        }    
                    },
                    "401":{
                        "description":"Unauthorized",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/Error"
                                }
                            }
                        }    
                    },
                    "200":{
                        "description":"Ok",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/CreatedContact"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/contact/{contactId}":{
            
            "patch":{
                "summary":"Atualização de usuário",
                "description": "Essa rota é responsavel por atualizar os dados de um contato",
                "tags":["contact"],
                "security":[{"bearerAuth":[]}],
                "parameters":[
                    {
                        "name":"contactId",
                        "in":"path",
                        "description":"Essa rota é responsavel por atualizar os dados de um contato, o usuário logado somente tem acesso aos contatos do seu perfil, a não ser admin, que tem acesso a todos os perfis.",
                        "required":true
                    }
                ],
                "requestBody":{
                    "content":{
                        "application/json":{
                            "schema":{
                               "$ref":"#/components/schemas/CreatedUser"
                            },
                            "examples":{
                                "user":{
                                    "value":{
                                        "name":"Pandora Patch"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "404":{
                        "description":"Contact not Found",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/Error"
                                }
                            }
                        }    
                    },
                    "401":{
                        "description":"Unauthorized",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/Error"
                                }
                            }
                        }    
                    },
                    "200":{
                        "description":"Ok",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/CreatedUser"
                                }
                            }
                        }
                    }
                }
            },
            "delete":{
                "summary":"Deleção de contato",
                "description": "Essa rota será responsável por realizar a deleção de um contato",
                "tags":["contact"],
                "security":[{"bearerAuth":[]}],
                "parameters":[
                    {
                        "name":"contactId",
                        "in":"path",
                        "description":"Essa rota é responsável por deletar os dados de um contato, o usuário logado somente tem acesso aos contatos do seu perfil, a não ser admin, que tem acesso a todos os perfis.",
                        "required":true
                    }
                ],
                "responses":{
                    "404":{
                        "description":"Contact not Found",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/Error"
                                }
                            }
                        }    
                    },
                    "401":{
                        "description":"Unauthorized",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/Error"
                                }
                            }
                        }    
                    },
                    "204":{
                        "description":"No content"
                        }
                    
                }
            }
        }
    },
    "components":{
        "schemas":{
            "Error":{
                "type":"object",
                "properties":{
                    "status":{
                        "type":"string"
                    },
                    "message":{
                        "type":"string"
                    }
                }
            },
            "UserLogin":{
                "type":"object",
                "properties":{
                    "email":{
                        "type":"string"
                    },
                    "password":{
                        "type":"string"
                    }
                }
            
            },
            "Token":{
                "type":"object",
                "properties":{
                    "token":{
                        "type":"string"
                    }
                }
            },
            "CreatedUser":{
                "type":"object",
                "properties":{
                    "id":{
                        "type":"string"
                    },
                    "name":{
                        "type":"string"
                    },
                    "email":{
                        "type":"string"
                    },
                    "phone":{
                        "type":"string"
                    },
                    "password":{
                        "type":"string"
                    },
                    "contacts":{
                        "type":"array"
                    }
                }            
            },
            "CreatedContact":{
                "type":"object",
                "properties":{
                    "id":{
                        "type":"string"
                    },
                    "name":{
                        "type":"string"
                    },
                    "email":{
                        "type":"string"
                    },
                    "phone":{
                        "type":"string"
                    }
                }            
            }
        },
        "securitySchemes":{
            "bearerAuth":{
                "type":"http",
                "scheme":"bearer",
                "bearerFormat":"JWT"
            }
        }
    }
    
}